<%= form_with model: @journal_rec do |form| %>
  <div>
    <%= form.label :surname %><br>
    <%= form.text_field :surname %>
    <% journal_rec.errors.full_messages_for(:surname).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :group %><br>
    <%= form.text_field :group %>
    <% journal_rec.errors.full_messages_for(:group).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :mark1 %><br>
    <%= form.text_field :mark1 %>
  </div>
  <div>
    <%= form.label :mark2 %><br>
    <%= form.text_field :mark2 %>
  </div>
  <div>
    <%= form.label :mark3 %><br>
    <%= form.text_field :mark3 %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>